{
  "name": "@jovijovi/ether-network",
  "version": "0.3.0",
  "description": "A provider network toolkit for Ethereum ecosystem",
  "author": "jovijovi <mageyul@hotmail.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "ether-network",
    "ethereum",
    "ether",
    "network",
    "provider"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jovijovi/ether-network.git"
  },
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "test": "jest --coverage --forceExit",
    "build": "yarn clean && tsc --build",
    "clean-pub": "rm -rf ./publish/* && mkdir -p ./publish",
    "prepub": "yarn clean-pub && yarn build && cp -ap ./dist/lib ./publish/lib && cp -ap LICENSE ./publish/ && cp -ap package.json ./publish/ && cp -ap README.md ./publish/"
  },
  "dependencies": {
    "@jovijovi/pedrojs-log": "^1.1.12",
    "ethers": "^5.7.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@typechain/ethers-v5": "10.1.0",
    "@types/jest": "28.1.7",
    "@types/node": "18.7.9",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "jest": "28.1.3",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "typechain": "8.1.0",
    "typescript": "4.7.4",
    "yaml": "^2.1.1"
  }
}
